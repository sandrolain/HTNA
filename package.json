{
  "name": "HTNA",
  "version": "0.1.0",
  "description": "Light custom elements library",
  "author": "Sandro Lain",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/umd/index.d.ts",
  "files": [
    "dist/esm/*",
    "dist/umd/*"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "npx rollup -c",
    "watch": "npx rollup -cw",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage",
    "test:coverage:open": "jest --runInBand --coverage && open ./coverage/lcov-report/index.html",
    "docs:build": "npx typedoc --plugin typedoc-plugin-no-inherit --out ./typedocs ./src",
    "docs:serve": "npm run docs:build && npx open-cli ./typedocs/index.html",
    "serve:demo": "npx run build && npx light-server -s . -p 5678 -o -w \"src/**/*.*, demo/*.* # npx run build\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sandrolain/HTNA.git"
  },
  "keywords": [
    "web",
    "component",
    "html",
    "DOM",
    "Shadow",
    "template",
    "javascript",
    "typescript",
    "library"
  ],
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "happy-dom": "^0.12.1",
    "jest": "^25.3.0",
    "jest-environment-happy-dom": "0.0.41",
    "light-server": "^2.6.4",
    "open-cli": "^6.0.1",
    "rollup": "^2.6.1",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "ts-jest": "^25.3.1",
    "typedoc": "^0.17.4",
    "typedoc-plugin-no-inherit": "^1.1.10",
    "typescript": "^3.8.3"
  }
}
